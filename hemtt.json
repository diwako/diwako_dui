{
  "name": "DUI Squad Radar",
  "prefix": "diwako_dui",
  "author": "Diwako",
  "files": [
    "mod.cpp"
  ],
  "exclude": [
    "*.psd",
    "*.png",
    "*.tga"
  ],
  "postbuild": ["!sign","!copy"],
  "scripts": {
    "copy": {
      "foreach": true,
      "steps": [
        "MOVE {{target}} D:\\SteamLibrary\\steamapps\\common\\\"Arma 3\"\\@diwako_dui\\addons\\",
        "MOVE {{target}}.diwako_dui.bisign D:\\SteamLibrary\\steamapps\\common\\\"Arma 3\"\\@diwako_dui\\addons\\"
      ]
    },
    "sign": {
      "foreach": true,
      "steps": [
        "G:\\\"Program Files (x86)\"\\Steam\\steamapps\\common\\\"Arma 3 Tools\"\\DSSignFile\\DSSignFile.exe diwako_dui.biprivatekey {{target}}"
      ]
    }
  }
}
